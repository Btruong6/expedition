{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "baseUrl": "./",
        "paths": {
            "@expedition-api/*": ["services/api/src/*"],
            "@expedition-app/*": ["services/app/src/*"],
            "@expedition-qdl/*": ["shared/*"]
        }
    },
    "exclude": [
        "node_modules",
        "app/src/quests",
        "platforms",
        "plugins",
        "www"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "useCache": true,
        "babelOptions": {
            "babelrc": true
        }
    }
}
